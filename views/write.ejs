<%- include('header'); %>
<div class="row">
  <div class="col-xs-6">
    <h1>글쓰기</h1>
  </div>
  <div class="col-xs-6 btnBoardWrite">
  </div>
</div>

<div class="row">
  <form action="/write" method="post" id="boardWrite" class="form-inline">
    <div class="row">
      <label class="col-sm-2 writeHead" for="writer">작성자 명</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="writer" name="writer" placeholder="이름...">
      </div>    
    </div>
    <div class="row">
      <label class="col-sm-2 writeHead" for="title">글 제목</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" id="title" name="title" placeholder="글 제목...">
      </div>    
    </div>
    <div class="row">
      <label class="col-sm-2 writeHead" for="content">내용</label>
      <div class="col-sm-10">
        <textarea class="form-control dataCmtContent" rows="7" id="content" name="content" placeholder="본문..." style="width: 100%;"></textarea>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary">전송</button>
        <a href="./"><input type="button" class="btn btn-default" value="목록"></a>
      </div>
    </div>
  </form>
</div>
<%- include('footer'); %>